{
  "name": "pillmind",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "start": "expo start",
    "start:clear": "expo start --clear",
    "reset": "expo start --clear --reset-cache",
    "start:android": "expo start --android",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "adb:devices": "adb devices",
    "adb:kill": "adb kill-server && adb start-server",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit --pretty false",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:snapshots": "jest --updateSnapshot",
    "sonar:cloud": "sonar-scanner",
    "sonar:cloud:auth": "sonar-scanner -Dsonar.host.url=https://sonarcloud.io -Dsonar.organization=mayconaraujosantos -Dsonar.projectKey=mayconaraujosantos_pillmind",
    "sonar:summary": "node scripts/sonar-summary.js",
    "pre-push": "npm run test:coverage && npm run sonar:cloud",
    "validate": "npm run lint && npm run format:check && npm run test && npx expo-doctor",
    "validate:fast": "npm run lint -- --cache && npm run typecheck",
    "nodered": "node-red --settings settings.js",
    "sonar:report": "echo 'ðŸ“Š SonarCloud Report: https://sonarcloud.io/project/overview?id=mayconaraujosantos_pillmind' && echo 'ðŸ’¡ Use VS Code SonarQube Extension for detailed analysis'",
    "build:dev:android": "eas build --profile development --platform android",
    "build:dev:ios": "eas build --profile development --platform ios",
    "commit": "cz commit",
    "commit:help": "cat doc/CONVENTIONAL_COMMITS.md",
    "prepare": "npx lefthook install && node scripts/fix-lefthook-hooks.js"
  },
  "dependencies": {
    "@expo-google-fonts/roboto": "^0.4.2",
    "@expo/vector-icons": "^15.0.3",
    "@react-native-async-storage/async-storage": "2.2.0",
    "@react-navigation/bottom-tabs": "^7.9.0",
    "@react-navigation/native": "^7.1.26",
    "expo": "~54.0.30",
    "expo-dev-client": "~6.0.20",
    "expo-font": "~14.0.10",
    "expo-localization": "^17.0.8",
    "expo-splash-screen": "^31.0.13",
    "expo-status-bar": "~3.0.9",
    "i18next": "^25.7.3",
    "node-red": "^4.1.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-i18next": "^16.5.1",
    "react-native": "0.81.5",
    "react-native-reanimated": "^4.2.1",
    "react-native-safe-area-context": "^5.6.2",
    "react-native-screens": "~4.16.0",
    "react-native-web": "^0.21.0",
    "react-native-worklets": "^0.7.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/js": "^9.39.2",
    "@evilmartians/lefthook": "^2.0.13",
    "@testing-library/jest-native": "^5.4.2",
    "@testing-library/react-native": "^13.3.3",
    "@types/jest": "29.5.14",
    "@types/react": "~19.1.0",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "babel-plugin-module-resolver": "^5.0.2",
    "babel-preset-expo": "^54.0.9",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.39.2",
    "eslint-config-expo": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-native": "^5.0.0",
    "expo-module-scripts": "^5.0.8",
    "jest": "^29.7.0",
    "jest-expo": "~54.0.1",
    "lefthook": "^2.0.13",
    "prettier": "^3.7.4",
    "sonarqube-scanner": "^4.3.0",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.50.1"
  },
  "expo": {
    "install": {
      "exclude": [
        "react-native-reanimated",
        "react-native-worklets"
      ]
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog",
      "disableScopeLowerCase": false,
      "disableSubjectLowerCase": false,
      "maxHeaderWidth": 100,
      "maxLineWidth": 100
    }
  },
  "private": true
}
